# GLOBALS

cluster_type = "openshift"
create_all = true
kube_config_path = "~/.kube/config"
namespace = "eyelevel"
pv_class = "local-storage"


# CACHE

cache_node = "crc"
cache_service = "redis"
cache_bundle_version = "v7.4.6-2"

cache_cpu_limits = "2"
cache_cpu_requests = "2"
cache_memory_limits = "16Gi"
cache_memory_requests = "16Gi"
cache_replicas = 3

# LOCAL CACHE

cache_version = "6.1"
cache_image_pull = "Always"
cache_image_tag = "latest"
cache_image_url = "public.ecr.aws/c9r4x6y5/eyelevel/redis"
cache_ip_type = "ClusterIP"
cache_mount_path = "/mnt/redis"
cache_port = 6379
cache_pv_access = "ReadWriteMany"
cache_pv_path = "/Users/benjaminfletcher/mnt/redis"
cache_pv_size = "1Gi"


# DATABASE

db_node = "crc"
db_service = "mysql"
db_service_version = "8.0"

db_backup_enable = true
db_ha_proxy_enable = true
db_ha_proxy_replicas = 3
db_logcollector_enable = true
db_pmm_enable = false
db_pv_size = "20Gi"
db_replicas = 3
db_sql_proxy_enable = false

db_name = "eyelevel"
db_password = "password"
db_root_password = "rootpassword"
db_username = "eyelevel"


# FILE

file_node = "crc"
