file_chart_tenant_version = "6.0.3"

file_cpu_limits = "4"
file_cpu_requests = "2"
file_memory_limits = "8Gi"
file_memory_requests = "4Gi"
file_pool_server = 4
file_pool_server_volumes = 4
file_pool_size = "1Ti"
file_pv_access = "ReadWriteMany"
file_pv_path = "/Users/benjaminfletcher/mnt/minio"
